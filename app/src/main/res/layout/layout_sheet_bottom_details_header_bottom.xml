<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_bank_map_object_details_header_bottom_root_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@android:color/transparent"
    android:paddingBottom="1dp">

    <TextView
        android:id="@+id/bank_map_object_details_address_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="21dp"
        android:singleLine="false"
        style="@style/TextViewRegularLight"
        android:includeFontPadding="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ул.Сатпаева, 90, угол ул.Брусиловского, 2 парадная, 1-й этаж" />

    <LinearLayout
        android:id="@+id/bank_map_object_details_distance_time_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank_map_object_details_address_tv"
        >

        <TextView
            android:id="@+id/bank_map_object_details_distance_tv"
            style="@style/BankMapObject.Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="28dp"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:layout_marginTop="0dp"
            android:drawablePadding="4dp"
            android:background="@android:color/transparent"
            android:gravity="start|top"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_bank_object_distance_20dp"
            tools:text="1,7km" />
    </LinearLayout>

    <TextView
        android:id="@+id/bank_map_object_details_btn_set_the_way"
        style="@style/BankMapObjectDetailsBtn"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_sheet_detail_btn"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/fragment_bank_object_detail_btn_set_way"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/bank_map_object_details_btn_show_on_map"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank_map_object_details_distance_time_ll" />

    <TextView
        android:id="@+id/bank_map_object_details_btn_show_on_map"
        style="@style/BankMapObjectDetailsBtn"
        android:gravity="center"
        android:layout_marginEnd="16dp"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:text="@string/fragment_bank_object_detail_btn_show_on_map"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/bank_map_object_details_btn_set_the_way"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/bank_map_object_details_btn_set_the_way"
        app:layout_constraintTop_toTopOf="@+id/bank_map_object_details_btn_set_the_way" />


</androidx.constraintlayout.widget.ConstraintLayout>